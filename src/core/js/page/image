'use strict';

// 页面实例

var path = require('path');
var lib = require('linco.lab').lib;
var Page = require('../lib/page');

var imgReg = /.png|.jpg|.gif/g;
var page = new Page;

var selectImg = 'data:image/png;base64,';

page.extend({
	name: "images",
	id: "image",

	init: function(){
		console.log('init ' + this.id)
	},

	enter: function(){
		var main, aside, lessFolder, ul;
		// 如果需要页面需要reload
		// window下的子方法获取要定义在enter方法内
		var doc = window.document;
		var $ = window.$;
		var home = window.home;
		var _this = this;

		// 载入页面
		console.log('enter ' + this.id);

		// 渲染aside
		this.render('asideInner', this.dom.aside, this.data.aside);

		main = $('#mainInner');
		aside = $('#asideInner');
		lessFolder = $('#lessFolder');
		ul = lessFolder.find('ul');

		function init(){
			loadImage()

			// 监听图片click事件
			main.delegate('li', 'click', function(){
				var li = $(this);

				if(li.hasClass('selected')){
					li.removeClass('selected');
				}else{
					li.addClass('selected').siblings('.selected').removeClass('selected');
				}

				if(li.find('.iselected').length > 0){
					li.find('.iselected').remove();
				}else{
					li.append('<img class="iselected" src="'+selectImg+'">')
				}
			})

			// 预览图片
			doc.onkeypress = function(e){
				var li, src;
				var url = 'image.html';
				var imageDom;
				var img;
				var win;

				// 监听空格键
				if(e.keyCode == 32){
					// 判断是否有图片被选中
					li = main.find('li.selected');

					if(li.length == 1){
						src = li.attr('path');
						url += '?imgurl='+src;
						
						// 如果不存在预览窗口则创建
						if(!win){
							img = new window.Image();
							img.src = src;
							img.onload = function(){
								win = new View(url, {width: img.width, height: img.height});
							}
						}else{
							// 如果已存在预览窗口则激活
							win.focus();
							// 打开新的图片
							imageDom = win.window.document.getElementById('image');
							if(imageDom){
								imageDom.src = src;
							}
						}

						return false;
					}
				}
			}
		}

		// 封装新建窗口方法
		function View(url, opt){
			var gui = window.gui;
			var win;
			// 默认窗口参数
			var def = {
				position: 'center',
				width: 800,
				height: 600,
				focus: true,
				toolbar: true,
				frame: true
			};
			// 合并参数
			opt = lib.extend(def, opt);

			// 新建窗口
			win = gui.Window.get(
				window.open(url)
			);
			// win = gui.Window.open(url, opt);

			// 设置大小
			win.resizeTo(opt.width, opt.height);

			// 激活预览窗口
			win.focus();
			win.setPosition('center')

			// 定义新窗口事件监听
			win.on('close', function(){
				this.hide();
				if(win != null)
					win.close(true)
				this.close(true);
			})
			win.on('closed', function() {
				win = null;
			});
			win.on('focus', function(){
				console.log('is focus')
				console.log(win.window.location)
			})
			win.on('blur', function(){
				console.log('is blur')
			})

			return win;
		}

		function loadImage(){
			var src;
			var file;
			var li = ul.find('li');
			var imgs = [];

			if(li.length>0){
				src = li.eq(0).attr('path');
				file = lib.dir(src).file;
				file.forEach(function(item){
					if(path.extname(item).match(imgReg)){
						imgs.push(item);
					}
				})
			}

			// 渲染main
			_this.render('mainInner', _this.dom.main, {list: imgs});
		}

		function add(file){
			ul.append('<li path="'+file.path+'">'+file.name+'</li>')
		}

		// 监听drag事件
		home.drag(this.id, function(e){
			var files = e.dataTransfer.files;

			lib.each(files, function(i, item){
				if(lib.isDir(item.path)){
					add(item);
				}
			})
		})

		init();
	},

	leave: function(){
		console.log('leave ' + this.id)
	},

	dom: {
		aside: ''+
				'<div id="lessFolder" class="list-folder">'+
				'	<ul>'+
				'	<%for(var i=0, len=list.length;i<len; i++){%>'+
				'		<li class="selected" path="<%=list[i].path%>"><%=list[i].name%></li>'+
				'	<%}%>'+
				'	</ul>'+
				'</div>',

		main: ''+
				'<div class="list-images">'+
				'	<ul>'+
				'	<%for(var i=0, len=list.length;i<len; i++){%>'+
				'		<li path="<%=list[i]%>" style="background-image: url(<%=list[i]%>)"></li>'+
				'	<%}%>'+
				'	</ul>'+
				'</div>'
	},

	data: {
		aside: {
			list: [
				{
					name: 'test',
					path: '/Users/gavinning/Pictures/test'
				}
			]
		}
	},

	ready: function(){

	}
});

// 如果需要可以启用初始化方法，二次进入虚拟页需要重新刷新数据
// page.init();
page.reg();


module.exports = page;